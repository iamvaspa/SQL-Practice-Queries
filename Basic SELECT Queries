-- 1. SELECT Statement.

-- 1.1. List every record from the customers table.
SELECT *
FROM Customers;

-- 1.2. Show the unique states where customers are located, sorted alphabetically.
SELECT 
	DISTINCT State
FROM Customers
ORDER BY State;

-- 1.3. Return the first 10 customers as they appear in the table.
SELECT *
FROM Customers
LIMIT 10;

-- 1.4. Find customers whose age is greater than 35.
SELECT 
	First_Name, Last_Name
FROM Customers
WHERE AGE > 35;

-- 1.5. List customers whose first name starts with the letter ‘A’.
SELECT
	First_Name
FROM Customers
WHERE First_Name LIKE "A%";

-- 1.6. Show customers whose email address uses the ‘gmail.com’ domain.
SELECT
	Email
FROM Customers
WHERE Email LIKE "%@gmail.com";

-- 1.7. Retrieve customers who registered in the year 2024.
SELECT 
	*, YEAR(Signup_Date) AS Year_Of_Registration
FROM Customers
WHERE Signup_Date = 2024;

-- 1.8. Return customers whose age is between 20 and 30 (inclusive).
SELECT
	First_Name, Last_Name, Age
FROM Customers
WHERE AGE BETWEEN 20 AND 30;

-- 1.9. List customers who live in any of these cities: Mumbai, New Delhi, Bengaluru, or Jaipur.
SELECT
	First_Name, Last_Name, City
FROM Customers
WHERE CITY IN ("Mumbai", "New Delhi", "Bengaluru", "Jaipur");

-- 1.10. List customers who do not live in these cities: Mumbai, New Delhi, Bengaluru, or Jaipur.
SELECT
	First_Name, Last_Name, City
FROM Customers
WHERE CITY NOT IN("Mumbai", "New Delhi", "Bengaluru", "Jaipur");

-- 1.11. Show the 5 oldest customers, from oldest to youngest.
SELECT
	First_Name, Last_Name, Signup_Date
FROM Customers
ORDER BY Signup_Date ASC
LIMIT 5;

-- 1.12. Show the 5 youngest customers, from youngest to oldest.
SELECT
	First_Name, Last_Name, Age
FROM Customers
ORDER BY Age ASC
LIMIT 5;

-- 1.13. Find customers whose phone number starts with ‘9’.
SELECT
	First_Name, Last_Name, Phone
FROM Customers
WHERE Phone LIKE "9%";

-- 1.14. Return all orders placed in the year 2025.
SELECT 
	Order_ID, Customer_ID, Order_Date
FROM Orders
WHERE YEAR(Order_Date) = "2025";

-- 1.15. List products priced between 10,000 and 50,000, ordered from highest to lowest price.
SELECT
	Product_ID, Product_Name, Price
FROM Products
WHERE PRICE BETWEEN 10000 AND 50000;
